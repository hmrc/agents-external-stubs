          "maxLength": 35
        },
        "addressLine4": {
          "type": "string",
          "description": "Address line 4",
          "minLength": 1,
          "maxLength": 35
        },
        "postalCode": {
          "type": "string",
          "description": "Business Postal Code",
          "minLength": 1,
          "maxLength": 10
        },
        "countryCode": {
          "description": "2-digit ISO code for the country",
          "$ref": "#/definitions/countryCode"
        }
      },
      "required": [
        "addressLine1",
        "countryCode"
      ],
      "additionalProperties": false
