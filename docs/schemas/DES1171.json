{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Response",
  "description": "Response",
  "$ref": "#/definitions/successResponse",
  "definitions": {
    "successResponse": {
      "type": "object",
      "properties": {
        "safeId": {
          "description": "SAFE reference identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 16,
          "x_uniqueKey": true
        },
        "nino": {
          "type": "string",
          "description": "The National Insurance Number with or without suffix",
          "pattern": "^((?!(BG|GB|KN|NK|NT|TN|ZZ)|(D|F|I|Q|U|V)[A-Z]|[A-Z](D|F|I|O|Q|U|V))[A-Z]{2})[0-9]{6}[A-D]?$",
          "x_key": true
        },
        "mtdbsa": {
          "type": "string",
          "description": "MTDBSA reference number",
          "minLength": 15,
          "maxLength": 16,
          "x_key": true
        },
        "propertyIncome": {
          "description": "Income Source is a properties",
          "type": "boolean"
        },
        "businessData": {
          "$ref": "#/definitions/businessDataType"
        },
        "propertyData": {
          "$ref": "#/definitions/propertyDataType"
        }
      },
      "required": [
        "safeId",
        "nino",
        "mtdbsa"
      ],
      "additionalProperties": false
    },
    "failureResponse": {
      "description": "DES Error Response Schema",
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/failureResponseElement"
        },
        {
          "$ref": "#/definitions/failureResponseArray"
        }
      ]
    },
    "failureResponseArray": {
      "type": "object",
      "properties": {
        "failures": {
          "type": "array",
          "minItems": 2,
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/failureResponseElement"
          }
        }
      },
      "additionalProperties": false
    },
    "failureResponseElement": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "enum": [
            "INVALID_NINO",
            "NOT_FOUND_NINO",
            "INVALID_MTDBSA",
            "NOT_FOUND_MTDBSA",
            "SERVER_ERROR",
            "SERVICE_UNAVAILABLE"
          ],
          "description": "Keys for all the errors returned. Custom per API"
        },
        "reason": {
          "type": "string",
          "minLength": 1,
          "maxLength": 160,
          "description": "A simple description for the failure"
        }
      },
      "required": [
        "code",
        "reason"
      ],
      "additionalProperties": false
    },
    "dateString": {
      "type": "string",
      "description": "Format YYYY-MM-DD",
      "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$"
    },
    "businessDataType": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "incomeSourceId": {
            "type": "string",
            "description": "Income source reference number",
            "minLength": 15,
            "maxLength": 16
          },
          "accountingPeriodStartDate": {
            "description": "Accounting period Start date. Format YYYY-MM-DD",
            "$ref": "#/definitions/dateString"
          },
          "accountingPeriodEndDate": {
            "description": "Accounting period End date. Format YYYY-MM-DD",
            "$ref": "#/definitions/dateString"
          },
          "tradingName": {
            "type": "string",
            "description": "Trading name",
            "minLength": 1,
            "maxLength": 105
          },
          "businessAddressDetails": {
            "oneOf": [
              {
                "$ref": "#/definitions/ukAddress"
              },
              {
                "$ref": "#/definitions/foreignAddress"
              }
            ]
          },
          "businessContactDetails": {
            "$ref": "#/definitions/businessContactDetailsType"
          },
          "tradingStartDate": {
            "description": "Trading Start Date. Format YYYY-MM-DD",
            "$ref": "#/definitions/dateString"
          },
          "cashOrAccruals": {
            "type": "string",
            "description": "Cash Or Accruals Flag",
            "enum": [
              "cash",
              "accruals"
            ]
          },
          "seasonal": {
            "description": "When true indicates is a seasonal business. For example, ski material rental",
            "type": "boolean"
          },
          "cessationDate": {
            "description": "Cessation Date",
            "$ref": "#/definitions/dateString"
          },
          "cessationReason": {
            "type": "string",
            "description": "Reason for Cessation. 001 - Retirement, 002 - Emigration, 003 - Business incorporated, 004 - Business has become a partnership, 005 - Bankruptcy, 006 - Other, 007 - Don’t want to say , 008 - Decease",
            "enum": [
              "001",
              "002",
              "003",
              "004",
              "005",
              "006",
              "007",
              "008"
            ]
          },
          "paperLess": {
            "description": "PaperLess Flag",
            "type": "boolean"
          }
        },
        "required": [
          "incomeSourceId",
          "accountingPeriodStartDate",
          "accountingPeriodEndDate"
        ],
        "additionalProperties": false
      }
    },
    "propertyDataType": {
      "type": "object",
      "properties": {
        "incomeSourceId": {
          "type": "string",
          "description": "Income source reference number",
          "minLength": 15,
          "maxLength": 16
        },
        "accountingPeriodStartDate": {
          "description": "Accounting period Start date. Format YYYY-MM-DD",
          "$ref": "#/definitions/dateString"
        },
        "accountingPeriodEndDate": {
          "description": "Accounting period End date. Format YYYY-MM-DD",
          "$ref": "#/definitions/dateString"
        },
        "numPropRented": {
          "type": "string",
          "description": "Num Prop Rented",
          "pattern": "^[0-9]{1,3}$"
        },
        "numPropRentedUK": {
          "type": "string",
          "description": "Num Prop Rented UK",
          "pattern": "^[0-9]{1,3}$"
        },
        "numPropRentedEEA": {
          "type": "string",
          "description": "Num Prop Rented EEA",
          "pattern": "^[0-9]{1,3}$"
        },
        "numPropRentedNONEEA": {
          "type": "string",
          "description": "Num Prop Rented NON EEA",
          "pattern": "^[0-9]{1,3}$"
        },
        "emailAddress": {
          "type": "string",
          "description": "Email address",
          "minLength": 3,
          "maxLength": 132
        },
        "cessationDate": {
          "description": "Cessation Date",
          "$ref": "#/definitions/dateString"
        },
        "cessationReason": {
          "type": "string",
          "description": "Reason for Cessation. 001 - Retirement, 002 - Emigration, 003 - Business incorporated, 004 - Business has become a partnership, 005 - Bankruptcy, 006 - Other, 007 - Don’t want to say , 008 - Deceased",
          "enum": [
            "001",
            "002",
            "003",
            "004",
            "005",
            "006",
            "007",
            "008"
          ]
        },
        "paperLess": {
          "description": "PaperLess Flag",
          "type": "boolean"
        }
      },
      "required": [
        "incomeSourceId",
        "accountingPeriodStartDate",
        "accountingPeriodEndDate"
      ],
      "additionalProperties": false
    },
    "businessContactDetailsType": {
      "type": "object",
      "properties": {
        "phoneNumber": {
          "type": "string",
          "description": "Telephone number ",
          "minLength": 1,
          "maxLength": 24,
          "pattern": "^[A-Z0-9 )/(*#-]+$"
        },
        "mobileNumber": {
          "type": "string",
          "description": "Mobile Number",
          "minLength": 1,
          "maxLength": 24,
          "pattern": "^[A-Z0-9 )/(*#-]+$"
        },
        "faxNumber": {
          "type": "string",
          "description": "Fax number",
          "minLength": 1,
          "maxLength": 24,
          "pattern": "^[A-Z0-9 )/(*#-]+$"
        },
        "emailAddress": {
          "type": "string",
          "description": "Email address",
          "minLength": 3,
          "maxLength": 132
        }
      },
      "additionalProperties": false
    },
    "ukAddress": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string",
          "description": "Address line 1",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine2": {
          "type": "string",
          "description": "Address line 2",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine3": {
          "type": "string",
          "description": "Address line 3",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine4": {
          "type": "string",
          "description": "Address line 4",
          "minLength": 1,
          "maxLength": 35
        },
        "postalCode": {
          "type": "string",
          "description": "Business Postal Code",
          "minLength": 1,
          "maxLength": 10
        },
        "countryCode": {
          "type": "string",
          "description": "2-digit ISO code for the country",
          "enum": [
            "GB"
          ]
        }
      },
      "required": [
        "addressLine1",
        "postalCode",
        "countryCode"
      ],
      "additionalProperties": false
    },
    "foreignAddress": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string",
          "description": "Address line 1",
          "minLength": 1,
          "maxLength": 35
