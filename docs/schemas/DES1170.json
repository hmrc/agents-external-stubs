{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Get Agent Record",
  "description": "Response",
  "oneOf": [
    {
      "$ref": "#/definitions/successResponse"
    }
  ],
  "definitions": {
    "successResponse": {
      "type": "object",
      "properties": {
        "businessPartnerExists": {
          "description": "TRUE if data has been found in the backend",
          "type": "boolean"
        },
        "safeId": {
          "description": "SAFE reference identifier",
          "type": "string",
          "pattern": "^X[A-Z]000[0-9]{10}$",
          "x_uniqueKey": true
        },
        "agentReferenceNumber": {
          "description": "Agent Reference Number",
          "type": "string",
          "pattern": "^[A-Z](ARN)[0-9]{7}$",
          "x_key": true
        },
        "utr": {
          "description": "Unique Taxpayer Reference",
          "type": "string",
          "pattern": "^[0-9]{1,10}$",
          "x_key": true,
          "x_private": true
        },
        "nino": {
          "type": "string",
          "description": "The National Insurance Number with or without suffix",
          "pattern": "^((?!(BG|GB|KN|NK|NT|TN|ZZ)|(D|F|I|Q|U|V)[A-Z]|[A-Z](D|F|I|O|Q|U|V))[A-Z]{2})[0-9]{6}[A-D]?$",
          "x_key": true,
          "x_private": true
        },
        "eori": {
          "type": "string",
          "description": "Economic Operator Registration and Identification number",
          "pattern": "^[A-z]{2}[0-9]{10,15}$",
          "x_key": true,
          "x_private": true
        },
        "isAnAgent": {
          "description": "Boolean value to indicate whether the Business Partner is an Agent or not",
          "type": "boolean"
        },
        "isAnASAgent": {
          "description": "Boolean value to indicate whether the Business Partner is an Agent for Making Tax Digital or not",
          "type": "boolean"
        },
        "isAnIndividual": {
          "description": "Boolean value to indicate whether the Business Partner is an Individual or not",
          "type": "boolean"
        },
        "individual": {
          "description": "Container element for Individual-specific fields",
          "$ref": "#/definitions/individual"
        },
        "isAnOrganisation": {
          "description": "Is the Business Partner an Organisation or not.",
          "type": "boolean"
        },
        "organisation": {
          "description": "Container element for Organisation-specific fields",
          "$ref": "#/definitions/organisation"
        },
        "addressDetails": {
          "description": "Container element for Address-specific fields",
          "oneOf": [
            {
              "$ref": "#/definitions/ukAddress"
            },
            {
              "$ref": "#/definitions/foreignAddress"
            }
          ]
        },
        "contactDetails": {
          "description": "Container element for Contact-specific fields",
          "type": "object",
          "properties": {
            "phoneNumber": {
              "type": "string",
              "minLength": 1,
              "maxLength": 24,
              "pattern": "^[A-Z0-9 )/(*#-]+$"
            },
            "mobileNumber": {
              "type": "string",
              "minLength": 1,
              "maxLength": 24,
              "pattern": "^[A-Z0-9 )/(*#-]+$"
            },
            "faxNumber": {
              "type": "string",
              "minLength": 1,
              "maxLength": 24,
              "pattern": "^[A-Z0-9 )/(*#-]+$"
            },
            "emailAddress": {
              "type": "string",
              "minLength": 1,
              "maxLength": 132
            }
          },
          "additionalProperties": false
        },
        "agencyDetails": {
          "description": "Container element for Agency-specific fields",
          "type": "object",
          "properties": {
            "agencyName": {
              "description": "Name of Agency",
              "type": "string",
              "minLength": 1,
              "maxLength": 40
            },
            "agencyAddress": {
              "description": "Container element for Agency Address-specific fields",
              "oneOf": [
                {
                  "$ref": "#/definitions/foreignAddress"
                },
                {
                  "$ref": "#/definitions/ukAddress"
                }
              ]
            },
            "agencyEmail": {
              "description": "Agency Email",
              "type": "string",
              "minLength": 1,
              "maxLength": 132
            }
          },
          "additionalProperties": false
        }
      },
      "oneOf": [
        {
          "required": [
            "businessPartnerExists",
            "safeId",
            "isAnIndividual",
            "individual",
            "addressDetails"
          ]
        },
        {
          "required": [
            "businessPartnerExists",
            "safeId",
            "isAnOrganisation",
            "organisation",
            "addressDetails"
          ]
        }
      ],
      "additionalProperties": false
    },
    "failureResponse": {
      "description": "DES Error Response Schema",
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/failureResponseElement"
        },
        {
          "$ref": "#/definitions/failureResponseArray"
        }
      ]
    },
    "failureResponseArray": {
      "type": "object",
      "properties": {
        "failures": {
          "type": "array",
          "minItems": 2,
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/failureResponseElement"
          }
        }
      },
      "additionalProperties": false
    },
    "failureResponseElement": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "enum": [
            "INVALID_IDTYPE",
            "INVALID_ARN",
            "INVALID_UTR",
            "NOT_FOUND",
            "SERVER_ERROR",
            "SERVICE_UNAVAILABLE"
          ],
          "description": "Keys for all the errors returned. Custom per API"
        },
        "reason": {
          "type": "string",
          "minLength": 1,
          "maxLength": 80,
          "description": "A simple description for the failure"
        }
      },
      "required": [
        "code",
        "reason"
      ],
      "additionalProperties": false
    },
    "dateString": {
      "type": "string",
      "description": "Format YYYY-MM-DD",
      "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$"
    },
    "individual": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "middleName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "lastName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "dateOfBirth": {
          "$ref": "#/definitions/dateString"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "dateOfBirth"
      ],
      "additionalProperties": false
    },
    "organisation": {
      "type": "object",
      "properties": {
        "organisationName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 105
        },
        "isAGroup": {
          "description": "Boolean value to indicate whether the Organisation is a Group or not",
          "type": "boolean"
        },
        "organisationType": {
          "description": "Type of the organisation: 0003 Partnership, 0002 LLP, 0004 Corporate body, 0005 Unincorporated body",
          "type": "string",
          "pattern": "^[A-Z a-z 0-9]{1,4}$"
        }
      },
      "required": [
        "organisationName",
        "isAGroup",
        "organisationType"
      ],
      "additionalProperties": false
    },
    "ukAddress": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine2": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine3": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine4": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "postalCode": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10
        },
        "countryCode": {
          "type": "string",
          "enum": [
            "GB"
          ]
        }
      },
      "required": [
        "addressLine1",
        "postalCode",
        "countryCode"
      ],
      "additionalProperties": false
    },
    "foreignAddress": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine2": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine3": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine4": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "postalCode": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10
        },
        "countryCode": {
          "$ref": "#/definitions/countryCode"
        }
      },
      "required": [
        "addressLine1",
        "countryCode"
      ],
      "additionalProperties": false
    },
